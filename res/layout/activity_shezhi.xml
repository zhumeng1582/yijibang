<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.example.yijibang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gridview_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativieLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical" >
            <TextView
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:textSize="17sp"
		        android:text="备忘" />
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativieLayout1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/shezhitiaomu_border"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@drawable/shezhimima" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|left"
                android:layout_weight="8"
                android:textColor="@color/shen"
                android:text="密码设置"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|right"
                android:layout_weight="8"
                android:text=""/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tiaomujiantou" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/shezhitiaomu_border"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@drawable/tongbushuju" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|left"
                android:layout_weight="8"
                android:textColor="@color/shen"
                android:text="同步数据"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|right"
                android:layout_weight="8"
                android:textColor="@color/qian"
                android:text="未绑定QQ"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tiaomujiantou" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/shezhitiaomu_border"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@drawable/jianchagengxin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|left"
                android:layout_weight="8"
                android:textColor="@color/shen"
                android:text="检测版本更新"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|right"
                android:layout_weight="8"
                android:textColor="@color/qian"
                android:text="版本:1.0.0"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tiaomujiantou" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/shezhitiaomu_border"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@drawable/guanyu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|left"
                android:layout_weight="8"
                android:textColor="@color/shen"
                android:text="关于"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|right"
                android:layout_weight="8"
                android:textColor="@color/qian"
                android:text=""/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tiaomujiantou" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical" 
            android:background="@color/gridview_context"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@drawable/yonghufankui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|left"
                android:layout_weight="8"
                android:textColor="@color/shen"
                android:text="用户反馈"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:gravity="center_vertical|right"
                android:layout_weight="8"
                android:textColor="@color/qian"
                android:text=""/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tiaomujiantou" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/linearLayout2"
            android:gravity="center"
            android:background="@color/gridview_context"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:gravity="center"
                android:textColor="@color/shen"
                android:text="未绑定"/>
        </LinearLayout>

</RelativeLayout>
