<?xml version="1.0" encoding="UTF-8"?>
<TabHost android:id="@android:id/tabhost" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        <FrameLayout android:id="@android:id/tabcontent" 
            android:layout_width="fill_parent" 
            android:layout_height="0.0dip" 
            android:layout_weight="1.0" />
        <TabWidget android:id="@android:id/tabs" 
            android:visibility="gone" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_weight="0.0" />
        <LinearLayout android:gravity="bottom" 
            android:layout_gravity="bottom" 
            android:orientation="horizontal" 
            android:id="@+id/main_tab_group" 
            android:background="@color/grey" 
            android:alpha="10"
            android:paddingTop="8dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <FrameLayout android:background="@null" 
                android:layout_width="0.0dip" 
                android:layout_height="fill_parent" 
                android:layout_weight="1.0">
                <LinearLayout android:id="@+id/main_layout_jizhang"
                    android:gravity="bottom|center" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent">
                    <RelativeLayout
                        android:id="@+id/main_tab_jizhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"		   
                        android:layout_weight="1" 
                        >
                        <ImageView
                            android:id="@+id/img_tab_jizhang"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"		        	
                            android:src="@drawable/jizhang" 
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_below ="@id/img_tab_jizhang"		       	
                            android:id="@+id/tab_jizhang_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"		       	
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/qian"
                            android:textSize="11sp" 
                            android:text="记账"/>
                    </RelativeLayout>
               </LinearLayout>
         </FrameLayout>
         
         <FrameLayout android:background="@null" 
             android:layout_width="0.0dip" 
             android:layout_height="fill_parent" 
             android:layout_weight="1.0">
                <LinearLayout android:id="@+id/main_layout_beiwang" 
                    android:gravity="bottom|center" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent">
                    <RelativeLayout
                        android:id="@+id/main_tab_beiwang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"		   
                        android:layout_weight="1" >
                        <ImageView
                            android:id="@+id/img_tab_beiwang"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"		     
                            android:src="@drawable/beiwang" 
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_below ="@id/img_tab_beiwang"		       	
                            android:id="@+id/tab_beiwang_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"		       	
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textColor= "@color/qian"
                            android:textSize="11sp" 
                            android:text="备忘"/>
                    </RelativeLayout>	
                </LinearLayout>
            </FrameLayout>
            
            <FrameLayout android:background="@null" 
                android:layout_width="0.0dip" 
                android:layout_height="fill_parent" 
                android:layout_weight="1.0">
                
                <LinearLayout android:id="@+id/main_layout_mima" 
                    android:gravity="bottom|center" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent">
                    <RelativeLayout
                        android:id="@+id/main_tab_mima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"		   
                        android:layout_weight="1" >
                        
                        <ImageView
                            android:id="@+id/img_tab_mima"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"		        	
                            android:src="@drawable/mima" 
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_below ="@id/img_tab_mima"		       	
                            android:id="@+id/tab_mima_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"		       	
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textColor= "@color/qian"
                            android:textSize="11sp"
                            android:text="密码"/>
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
 
            <FrameLayout android:background="@null" 
                android:layout_width="0.0dip" 
                android:layout_height="fill_parent" 
                android:layout_weight="1.0">
                <LinearLayout android:id="@+id/main_layout_shezhi" 
                    android:gravity="bottom|center" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent">
                    <RelativeLayout
                        android:id="@+id/main_tab_shezhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"		   
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/img_tab_shezhi"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"		        	
                            android:src="@drawable/shezhi" 
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_below ="@id/img_tab_shezhi"		       	
                            android:id="@+id/tab_shezhi_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"		       	
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/qian"
                            android:textSize="11sp"
                            android:text="设置"/>
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
 </TabHost>